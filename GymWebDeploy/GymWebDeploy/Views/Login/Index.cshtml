
@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="card card-login col-6 mx-auto mt-5">
    <div class="card-header">Iniciar Sesión</div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="user">Usuario</label>
                <input class="form-control" id="user" placeholder="Escribe tu usuario">
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input class="form-control" id="password" type="password" placeholder="Password">
            </div>
            <a class="btn btn-primary btn-block" href="../Application/Index">Entrar</a>
        </form>
        <div class="text-center">
            <a class="d-block small mt-3" href="/Login/Account">Registrar cuenta</a>
            <a class="d-block small" href="#">Olvidaste tu contraseña?</a>
        </div>
    </div>
</div>
<script src="~/Scripts/Application/utils/AfterJS.js"></script>
<script src="~/Scripts/Application/AJAXRequest.js"></script>
<script src="~/Scripts/Application/utils/NotificationsHelper.js"></script>
<script src="~/Scripts/Application/utils/ElementsHelper.js"></script>
<script src="~/Scripts/Application/utils/DatatablesHelper.js"></script>
<script src="~/Scripts/Application/Login.js"></script>
<script src="~/Scripts/Application/utils/TitlesHelper.js"></script>