
@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="card card-login col-6 mx-auto mt-5">
    <div class="card-header">Iniciar Sesión</div>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="user">Usuario</label>
                <input id="userText" type="text" class="input-group-text col-md-12" aria-label="Default" placeholder="Escribe tu usuario">
            </div>
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input id="passText" class="input-group-text col-md-12" aria-label="Default" type="password" placeholder="Password">
            </div>
            @*<a class="btn btn-primary btn-block" href="../Application/Index">Entrar</a>*@
            <button id="btnLogin" type="button" class="btn btn-block btn-success" data-toggle="modal" data-target="#modalPayment">
                Ingresar
            </button>
        </form>
        <div class="text-center">
            @*<a class="d-block small mt-3" href="/Login/Account">Registrar cuenta</a>
            <a class="d-block small" href="#">Olvidaste tu contraseña?</a>*@
        </div>
    </div>
</div>
