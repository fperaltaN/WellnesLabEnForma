@{
    ViewBag.Title = "Paquetes";
    Html.RenderPartial("_DataGridView");
    Html.RenderPartial("_ModalDeleteView");
}
<form id="DataForm" class="needs-validation form form-group container" novalidate>
    <div class="modal fade" id="ModalData" tabindex="-1" role="dialog" aria-labelledby="ModalDataTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header card-header alert-secondary text-center">
                    <h5 class="modal-title">
                        <label id="ModalTitle"></label>
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row mb-1">
                        <div class="col-md-1"></div>
                        <label class="col-md-2 input-group-text" for="packageName">Nombre</label>
                        <input type="text" class="form-control col-md-7" id="packageName" aria-label="Nombre de paquete" placeholder="Nombre de paquete" required>
                        <div class="invalid-feedback col-md-2">
                            Falta información!
                        </div>
                    </div>
                    <div class="row mb-1">
                        <div class="col-md-1"></div>
                        <label class="col-md-2 input-group-text" for="packageDays">Días</label>
                        <input type="text" class="form-control col-md-7" id="packageDays" aria-label="Días del paquete" placeholder="Días del paquete" required>
                        <div class="invalid-feedback col-md-2">
                            Falta información!
                        </div>
                    </div>
                    <div class="row mb-1">
                        <div class="col-md-1"></div>
                        <label class="col-md-2 input-group-text text-right" for="packageCost">Costo</label>
                        <input type="text" class="form-control col-md-7" id="packageCost" aria-label="Costo de paquete" placeholder="Costo de paquete" required>
                        <div class="invalid-feedback col-md-2">
                            Falta información!
                        </div>
                    </div>
                    <div class="row mb-1">
                        <div class="col-md-1"></div>
                        <label class="col-md-2 input-group-text" for="packageDescription">Decripción</label>
                        <textarea class="form-control col-md-7" id="packageDescription" rows="3" aria-label="Descripción del paquete" placeholder="Descripción del paquete" required></textarea>
                        <div class="invalid-feedback col-md-2">
                            Falta información!
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-md-9">
                            <button type="submit" class="btn btn-block btn-success">Guardar Cambios</button>
                        </div>
                        <div class="col-md-2"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/Scripts/Application/utils/AfterJS.js"></script>
<script src="~/Scripts/Application/AJAXRequest.js"></script>
<script src="~/Scripts/Application/utils/NotificationsHelper.js"></script>
<script src="~/Scripts/Application/utils/ElementsHelper.js"></script>
<script src="~/Scripts/Application/utils/DatatablesHelper.js"></script>
<script src="~/Scripts/Application/Paquete.js"></script>
<script src="~/Scripts/Application/utils/TitlesHelper.js"></script>